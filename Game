from envelope import Envelope

class Game:

    def __init__(self, strategy):
        self.strategy = strategy
        self.result = None

    def play(self):
        self.result = self.strategy.play()
        return self.result

    def reset(self):
        envelopes = []
        for i in range(100):
            envelopes.append(Envelope())
        self.strategy.envelopes = envelopes
        self.result = None
